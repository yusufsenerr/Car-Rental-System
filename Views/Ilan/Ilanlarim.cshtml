@model AracKiralamaOtomasyonu.Models.Class.IlanListeViewModel
@{
    ViewBag.Title = "Ilanlarım";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<section class="ftco-section ftco-no-pt bg-light mt-5">
    <div class="container mt-5">
        <div class="row justify-content-center">
        </div>
        <div class="row">
            @*Modelden gelen bilgileri foreach kullanarak cardlara ekliyorum*@
            @foreach (var item in Model.Ilanlars)
            {
                <div class="col-md-3">
                    <div class="">

                        <div class="item">
                            <div class="car-wrap rounded ftco-animate">
                                <div class="img rounded d-flex align-items-end" style="background-image: url(/Dosyalar/Public/@item.Dosyalar.Url);">
                                </div>
                                <div class="text">
                                    <h2 class="mb-0"><a href="/Ilan/Ilan/@item.IDIlan">@item.Baslik</a></h2>
                                    <div class="d-flex mb-3">
                                        <span>@item.AracMarka.Ad @item.AracModel.ModelAd</span>
                                        <p class="price ml-auto">@item.Fiyat ₺ <span style="color:black!important">/ Günlük</span></p>
                                    </div>
                                    <a href="/Ilan/IlanDuzenle/@item.IDIlan" class="btn btn-primary py-2 ml-1">İlanı Düzenle</a>
                                    <a href="/Ilan/IlanSil/@item.IDIlan" class="btn btn-danger py-2 ml-1">İlanı Kaldır</a>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            }
        </div>
    </div>
</section>