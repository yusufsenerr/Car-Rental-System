@model AracKiralamaOtomasyonu.Models.Class.PanelViewModel
@{
    ViewBag.Title = "Panel";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="content-wrapper">

    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="card">
            <h5 class="card-header">İLANLARIM</h5>
            <div class=" text-nowrap">
                <table class="table" style="min-height:50px!important">
                    <thead>
                        <tr>
                            <th class="text-center">Başlık</th>
                            <th class="text-center">Marka</th>
                            <th class="text-center">Model</th>
                            <th class="text-center">İlan Tarihi</th>
                            <th class="text-center">Durum</th>
                            <th></th>

                        </tr>
                    </thead>

                    <tbody class="table-border-bottom-5">


                        @foreach (var item in Model.Ilanlars.Take(10))
                        {
                            <tr>

                                <td class="text-center"><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Baslik</strong></td>
                                <td class="text-center">@item.AracMarka.Ad</td>
                                <td class="text-center">@item.AracModel.ModelAd</td>
                                <td class="text-center">@item.IlanTarihi.ToString("dd MMMMMMMM yyyy")</td>
                                @if (item.Durum == "3")
                                {
                                    <td class="text-center"><span class="badge bg-label-success me-1">Yayında</span></td>
                                }
                                @if (item.Durum == "1")
                                {
                                    <td class="text-center"><span class="badge bg-label-danger me-1">Yayından Kaldırıldı</span></td>
                                }
                                @if (item.Durum == "4")
                                {
                                    <td class="text-center"><span class="badge bg-label-danger me-1">Araç Kiralandı</span></td>
                                }
                                <td class="text-center">
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="/Ilan/Ilan/@item.IDIlan" target="_blank"><i class="bx bx-show me-1"></i>Görüntüle</a>
                                            <a class="dropdown-item" href="/Ilan/IlanDuzenle/@item.IDIlan"><i class="bx bx-edit-alt me-1"></i>Düzenle</a>

                                        </div>
                                    </div>
                                </td>


                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>


    </div>
</div>

