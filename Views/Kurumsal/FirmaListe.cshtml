
@{
    ViewBag.Title = "FirmaListe";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}
 <div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <h5 class="card-header">Firma Listesi</h5>
        <div class=" text-nowrap">
            <table class="table" style="min-height:50px!important">
                <thead>
                    <tr>
                        <th class="text-center">ID</th>
                        <th class="text-center">Logo</th>
                        <th class="text-center">Ad</th>
                        <th class="text-center">Adres</th>
                        <th class="text-center">Telefon</th>
                        <th class="text-center"></th>

                    </tr>
                </thead>

                <tbody class="table-border-bottom-5">


                    @foreach (var item in Model)
                    {
                    <tr>
                        <td class="text-center">@item.ID</td>
                        <td class="text-center">
                            <img src="~/Dosyalar/Public/@item.LogoUrl" width="100" style="height:auto" />
                        </td>

                        <td class="text-center"><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Ad</strong></td>
                        <td class="text-center">@item.Adres</td>
                        <td class="text-center">@item.Telefon</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Kurumsal/Detay/@item.ID" target="_blank"><i class="bx bx-show me-1"></i>Görüntüle</a>
                                    <a class="dropdown-item" href="/Admin/IlanDuzenle"><i class="bx bx-edit-alt me-1"></i>Düzenle</a>
                                    <a class="dropdown-item" href="/Kurumsal/FirmaSil/@item.ID"><i class="bx bx-trash me-1"></i>Sil</a>
                                </div>
                            </div>
                        </td>

                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>


</div>
