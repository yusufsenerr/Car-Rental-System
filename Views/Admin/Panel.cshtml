@model AracKiralamaOtomasyonu.Models.Class.PanelViewModel
@{
    ViewBag.Title = "Panel";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="content-wrapper">
    <div class="container-xxl">
        <!-- Content -->
        <div class="col-lg-12 col-md-12 mt-5">
            <div class="row">
                <div class="col-lg-3 col-md-12 col-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title d-flex align-items-start justify-content-between">
                                <div class="avatar flex-shrink-0">
                                    <img src="~/images/panel/car-rent.png"
                                         alt="chart success"
                                         class="rounded" />
                                </div>

                            </div>
                            <span class="fw-semibold d-block mb-1">Toplam İlan</span>
                            <h3 class="card-title mb-2">@ViewBag.ToplamIlan</h3>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-12 col-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title d-flex align-items-start justify-content-between">
                                <div class="avatar flex-shrink-0">
                                    <img src="~/images/panel/car-rental.png"
                                         alt="Credit Card"
                                         class="rounded" />
                                </div>

                            </div>
                            <span class="fw-semibold d-block mb-1">Onaylanmamış İlan</span>
                            <h3 class="card-title text-nowrap mb-1">@ViewBag.ToplamOnaylanmayanIlan</h3>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-12 col-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title d-flex align-items-start justify-content-between">
                                <div class="avatar flex-shrink-0">
                                    <img src="~/images/panel/man.png"
                                         alt="Credit Card"
                                         class="rounded" />
                                </div>

                            </div>
                            <span class="fw-semibold d-block mb-1">Toplam Kullanıcı</span>
                            <h3 class="card-title text-nowrap mb-1">@Model.Kullanicis.Count()</h3>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-12 col-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title d-flex align-items-start justify-content-between">
                                <div class="avatar flex-shrink-0">
                                    <img src="~/images/panel/man.png"
                                         alt="Credit Card"
                                         class="rounded" />
                                </div>

                            </div>
                            <span class="fw-semibold d-block mb-1">Toplam Personel</span>
                            <h3 class="card-title text-nowrap mb-1">@Model.Personels.Count()</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="card">
            <h5 class="card-header">ONAYLANACAK İLANLAR</h5>
            <div class=" text-nowrap">
                <table class="table" style="min-height:50px!important">
                    <thead>
                        <tr>
                            <th class="text-center">ID</th>
                            <th class="text-center">Başlık</th>
                            <th class="text-center">Marka</th>
                            <th class="text-center">Model</th>
                            <th class="text-center">İlan Tarihi</th>
                            <th class="text-center">Durum</th>

                        </tr>
                    </thead>

                    <tbody class="table-border-bottom-5">

                            
                            @foreach (var item in Model.Ilanlars.Take(10))
                            {
                                <tr>

                                    <td class="text-center">@item.IDIlan</td>
                                    <td class="text-center"><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Baslik</strong></td>
                                    <td class="text-center">@item.AracMarka.Ad</td>
                                    <td class="text-center">@item.AracModel.ModelAd</td>
                                    <td class="text-center">@item.IlanTarihi.ToString("dd MMMMMMMM yyyy")</td>
                                    <td class="text-center"><span class="badge bg-label-warning me-1">Onaylanacak</span></td>
                                    <td>
                                        <div class="dropdown">
                                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="/Ilan/Ilan/@item.IDIlan" target="_blank"><i class="bx bx-show me-1"></i>Görüntüle</a>
                                                <a class="dropdown-item" href="/Admin/IlanDuzenle/@item.IDIlan"><i class="bx bx-edit-alt me-1"></i>Düzenle</a>
                                                <a class="dropdown-item" href="/Admin/IlanSil/@item.IDIlan"><i class="bx bx-trash me-1"></i>Sil</a>
                                            </div>
                                        </div>
                                    </td>

                                </tr>
                            }

                    </tbody>
                </table>
            </div>
        </div>


    </div>
</div>